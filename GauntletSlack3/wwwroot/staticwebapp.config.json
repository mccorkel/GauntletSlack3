{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/*.{ico,png,jpg,gif,svg}"
    ]
  },
  "mimeTypes": {
    ".dll": "application/octet-stream",
    ".wasm": "application/wasm",
    ".js": "application/javascript",
    ".css": "text/css",
    ".json": "application/json",
    ".woff": "application/font-woff",
    ".woff2": "application/font-woff2",
    ".html": "text/html",
    ".txt": "text/plain",
    ".ico": "image/x-icon",
    ".png": "image/png",
    ".jpg": "image/jpeg",
    ".gif": "image/gif",
    ".svg": "image/svg+xml",
    ".eot": "application/vnd.ms-fontobject",
    ".ttf": "application/font-sfnt",
    ".dat": "application/octet-stream",
    ".blat": "application/octet-stream",
    ".br": "application/octet-stream",
    ".gz": "application/gzip"
  },
  "routes": [
    {
      "route": "/api/*",
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/_framework/*",
      "headers": {
        "Cache-Control": "public, max-age=604800, immutable"
      }
    },
    {
      "route": "/_content/*",
      "headers": {
        "Cache-Control": "public, max-age=604800, immutable"
      }
    },
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "globalHeaders": {
    "content-security-policy": "default-src 'self' 'unsafe-eval' 'unsafe-inline'; connect-src *; img-src 'self' data: https:; font-src 'self' data:; script-src 'self' 'unsafe-eval' 'unsafe-inline' https://login.microsoftonline.com",
    "X-Content-Type-Options": "nosniff"
  }
} 