{
  "platform": {
    "apiRuntime": "dotnet-isolated:6.0"
  },
  "mimeTypes": {
    ".dll": "application/octet-stream",
    ".wasm": "application/wasm",
    ".js": "application/javascript",
    ".css": "text/css",
    ".json": "application/json",
    ".woff": "application/font-woff",
    ".woff2": "application/font-woff2",
    ".html": "text/html",
    ".txt": "text/plain",
    ".ico": "image/x-icon",
    ".png": "image/png",
    ".jpg": "image/jpeg",
    ".gif": "image/gif",
    ".svg": "image/svg+xml",
    ".eot": "application/vnd.ms-fontobject",
    ".ttf": "application/font-sfnt",
    ".dat": "application/octet-stream",
    ".blat": "application/octet-stream",
    ".br": "application/octet-stream",
    ".gz": "application/gzip"
  },
  "routes": [
    {
      "route": "/api/*",
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "allowedRoles": ["anonymous", "authenticated"]
    },
    {
      "route": "/hubs/*",
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "allowedRoles": ["anonymous", "authenticated"]
    },
    {
      "route": "/_framework/*",
      "headers": {
        "Cache-Control": "public, max-age=604800, immutable"
      }
    },
    {
      "route": "/_content/*",
      "headers": {
        "Cache-Control": "public, max-age=604800, immutable"
      }
    },
    {
        "route": "/lib/*",
        "headers": {
            "Cache-Control": "public, max-age=604800, immutable"
        }
    },
    {
        "route": "/js/*",
        "headers": {
            "Cache-Control": "public, max-age=604800, immutable"
        }
    },
    {
        "route": "*.js",
        "headers": {
            "Cache-Control": "public, max-age=604800, immutable"
        }
    },
    {
        "route": "*.css",
        "headers": {
            "Cache-Control": "public, max-age=604800, immutable"
        }
    },
    {
      "route": "/*",
      "rewrite": "/index.html"
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/_framework/*",
      "/_content/*",
      "/css/*",
      "/js/*",
      "/lib/*",
      "*.ico",
      "*.png",
      "*.jpg",
      "*.css",
      "*.js"
    ]
  },
  "globalHeaders": {
    "content-security-policy": "default-src 'self' 'unsafe-inline' 'unsafe-eval'; img-src 'self' data: https:; connect-src 'self' https://*.azurestaticapps.net https://*.azure.com https://*.applicationinsights.azure.com wss://*.azurestaticapps.net api://*;",
    "Access-Control-Allow-Origin": "*",
    "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
    "Access-Control-Allow-Headers": "Content-Type, Authorization",
    "X-Content-Type-Options": "nosniff"
  }
} 