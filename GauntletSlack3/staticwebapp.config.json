{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/_framework/*",
      "/_content/*",
      "/css/*",
      "/js/*",
      "/lib/*",
      "*.ico",
      "*.png",
      "*.jpg",
      "*.css",
      "*.js"
    ]
  },
  "mimeTypes": {
    ".css": "text/css",
    ".js": "application/javascript",
    ".woff": "application/font-woff",
    ".woff2": "application/font-woff2",
    ".ttf": "application/font-sfnt",
    ".eot": "application/vnd.ms-fontobject",
    ".svg": "image/svg+xml",
    ".ico": "image/x-icon",
    ".png": "image/png",
    ".jpg": "image/jpeg",
    ".json": "application/json",
    ".dll": "application/octet-stream",
    ".wasm": "application/wasm",
    ".dat": "application/octet-stream",
    ".blat": "application/octet-stream",
    ".br": "application/x-br"
  },
  "globalHeaders": {
    "content-security-policy": "default-src 'self' 'unsafe-inline' 'unsafe-eval'; img-src 'self' data: https:; connect-src 'self' https://*.azurestaticapps.net https://*.azure.com https://*.applicationinsights.azure.com wss://*.azurestaticapps.net;",
    "X-Content-Type-Options": "nosniff"
  }
} 