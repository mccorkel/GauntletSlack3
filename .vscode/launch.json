{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Client",
            "type": "blazorwasm",
            "request": "launch",
            "cwd": "${workspaceFolder}/GauntletSlack3",
            "url": "https://localhost:7229"
        },
        {
            "name": "Server",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/GauntletSlack3.Api/GauntletSlack3.Api.csproj",
                "--urls",
                "https://localhost:7237;http://localhost:5256"
            ],
            "cwd": "${workspaceFolder}/GauntletSlack3.Api",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ],
    "tasks": {
        "version": "2.0.0",
        "tasks": [
            {
                "label": "build-all",
                "group": {
                    "kind": "build",
                    "isDefault": true
                },
                "dependsOn": [
                    "build-shared",
                    "build-api"
                ],
                "dependsOrder": "sequence"
            },
            {
                "label": "build-shared",
                "command": "dotnet",
                "type": "process",
                "args": [
                    "build",
                    "${workspaceFolder}/GauntletSlack3.Shared/GauntletSlack3.Shared.csproj"
                ],
                "problemMatcher": "$msCompile"
            },
            {
                "label": "build-api",
                "command": "dotnet",
                "type": "process",
                "args": [
                    "build",
                    "${workspaceFolder}/GauntletSlack3.Api/GauntletSlack3.Api.csproj"
                ],
                "problemMatcher": "$msCompile"
            }
        ]
    },
    "compounds": [
        {
            "name": "Full Stack",
            "configurations": ["Server", "Client"]
        }
    ]
}